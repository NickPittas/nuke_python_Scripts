{
  "templateName": "Demo Template",
  "templateString": "<shotNumber>_<description>_<resolution>_<version>.<frame_padding>.<extension>",
  "tags": {
    "sequence": {
      "label": "Sequence",
      "default": "",
      "allowed": [""],
      "overrideAllowed": true,
      "locked": false,
      "note": "Sequence is chosen from the allowed list or overridden manually."
    },
    "shotNumber": {
      "label": "Shot Number",
      "default": "0010",
      "increment": 10,
      "overrideAllowed": true,
      "locked": false,
      "note": "4-digit shot number that increments by 10 if auto-increment is used."
    },
    "description": {
      "label": "Description",
      "default": "comp",
      "allowed": ["comp", "roto", "paint", "previz", "concept", "layout", "dmp"],
      "overrideAllowed": true,
      "locked": false,
      "note": "Description chosen from list or overridden (camelCase or underscores only)."
    },
    "resolution": {
      "label": "Resolution",
      "default": "hdK",
      "allowed": ["hd", "2k", "4k", "8k", "12k", "16k", "32k"],
      "overrideAllowed": true,
      "locked": false
    },
    "colorspace": {
      "label": "Colorspace",
      "allowed": ["rec709", "sRGB", "acescg"],
      "overrideAllowed": true,
      "locked": false
    },
    "fps": {
      "label": "FPS",
      "default": "25",
      "allowed": ["2398", "24", "25", "2997", "30", "5994"],
      "overrideAllowed": true,
      "locked": false
    },
    "frame_padding": {
      "label": "Frame Padding",
      "default": "4",
      "overrideAllowed": true,
      "locked": false,
      "note": "Number of digits for frame numbering."
    },
    "extension": {
      "label": "Extension",
      "default": "exr",
      "allowed": ["exr", "jpg", "png", "mov", "mp4"],
      "overrideAllowed": true,
      "locked": false
    }
  },
  "proxyFull": {
    "full": {
      "pathSuffix": "full"
    },
    "proxy": {
      "pathSuffix": "proxy"
    }
  }
}
